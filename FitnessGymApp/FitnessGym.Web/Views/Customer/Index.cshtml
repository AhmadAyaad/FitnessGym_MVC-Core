@{
}
@model IEnumerable<FitnessGym.Models.Customer>




<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Customer Name</th>
            <th scope="col">Memebership start Date</th>
            <th scope="col">Memebership end Date</th>
            <th scope="col">Membership type</th>
            <th scope="col">Phone</th>
            <th scope="col">Age</th>
            <th scope="col">Coach Name</th>
            <th scope="col">Health Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.CustomerName</th>
                <td>@item.MemeberShipStartDate.ToShortDateString()</td>
                <td>@item.MemeberShipEndDate.ToShortDateString()</td>
                <td>@item.MemberShipType.ToString()</td>
                <td>@item.Phone</td>
                <td>@item.Age</td>
                <td>@item.Coach?.CoachName</td>
                <td>@item.HealthStatus</td>
            </tr>
        }

    </tbody>
</table>