@model FitnessGym.Models.Coach

<form method="post" class="form-group" name="roleForm" asp-controller="Coach" asp-action="Create">

    @Html.HiddenFor(c => c.CoachId)

  
    <label asp-for="CoachName"></label>
    <input asp-for="CoachName" class="form-control" />


    <label asp-for="StartWorkingDate"></label>
    <input asp-for="StartWorkingDate" class="form-control" />
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })


    <input id="savebtn" type="submit" value="Save" class="mt-4 btn btn-dark" />

</form>